{
  "extends": ["airbnb", 
              "airbnb-typescript",
              "plugin:react/jsx-runtime", 
              "prettier",
              "plugin:import/typescript"],
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": ["./tsconfig.json"]
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "react", 
    "prettier"
  ],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/prop-types": "off",
    "no-console": [
      "error",
      { "allow": ["error"] }
    ],
    "prettier/prettier": ["error"]
  },
  "settings": {
    "react": { "version": "detect" }
  }
}
